{% extends 'base.html.twig' %}

{% block title %}Listing-Films!{% endblock %}

{% block body %}

 

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    {% include "includes/side-bar-left-templates.html.twig" %}

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
         {% include "includes/nav-templates.html.twig" %}

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Listing-film</h1>
           
          </div>

          <!-- Content Row -->
          <div class="row">  

            {% if is_granted('ROLE_ADMIN') %}

                   <a href="{{ path('film_add') }}"><button type="button" class="btn btn-primary">Ajouter un film</button></a>
             {% endif %}

           <div class="row"  style="margin-top :5%;margin-left:5%">

             {% if films %}

             <table class="table table-bordered" style="text-align:center">

               <head>

                             <tr>

                                  <td>ID</td>

                                  <td>PICTURE</td> 

                                  <td>NOM</td> 

                                  <td>ACTION</td>                 
                              </tr>

               </head>
               
               <body>

                 {% for film in films %}

                    <tr>

                         <td><a href="{{ path('film_show',{'id': film.id}) }}">{{ film.id }}</a></td>

                           {% if film.picture %}

                          <td><img src="{{ asset('uploads/' ~ film.picture) }}" class="responsive-img"  style="width:30%"></td>                          

                          {% else %}

                               <td><img src="{{ asset('dist/img/movie.jpg') }}" class="responsive-img"  style="width:30%"></td>

                          {% endif %}

                         <td><a href="{{ path('film_show',{'id': film.id}) }}">{{ film.title }}</a></td> 



                         <td>
                             <a href="{{ path('film_show',{'id': film.id}) }}"><button type="button" class="btn btn-danger">Consulter la fiche</button></a>                             
                              
                           
                           
                           {% if is_granted('ROLE_ADMIN') %}

                            <a href="{{ path('film_remove',{'id': film.id}) }}"><button type="button" class="btn btn-danger">Supprimer la fiche</button></a>
                             
                             <a href="{{ path('film_edit',{'id': film.id}) }}"><button type="button" class="btn btn-primary">Editer la fiche</button></a>

                            {% endif %}

                             
                             
                        </td>          
                    </tr>

                 {% endfor %}         

               </body>

              </table>           
            {% endif %}
            </div>


           </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->

      {% include "includes/footer-templates.html.twig" %}
    
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
